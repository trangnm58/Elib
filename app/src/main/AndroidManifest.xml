<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pagenguyen.elib" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="ANDROID.PERMISSION.RECORD_AUDIO" />

    <application
        android:name=".ElibApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".ui.HomeActivity"
            android:theme="@style/FullTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pagenguyen.elib.ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".ui.LoginActivity"
            android:theme="@style/FullTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pagenguyen.elib.ui.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.dictionary.SearchVocabActivity"
            android:label="@string/title_activity_search_vocab"
            android:parentActivityName=".ui.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pagenguyen.elib.ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.dictionary.VocabContentActivity"
            android:label="@string/title_activity_vocab_content"
            android:parentActivityName=".ui.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pagenguyen.elib.ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.dictionary.VoiceSearchActivity"
            android:label="@string/title_activity_voice_search"
            android:parentActivityName=".ui.dictionary.SearchVocabActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pagenguyen.elib.ui.dictionary.SearchVocabActivity" />
        </activity>
        <activity
            android:name=".ui.stories.StoryListActivity"
            android:label="@string/title_activity_story_list"
            android:parentActivityName=".ui.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pagenguyen.elib.ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.stories.StoryContentActivity"
            android:label="@string/title_activity_story_content"
            android:parentActivityName=".ui.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pagenguyen.elib.ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.exercise.ExerciseListActivity"
            android:label="@string/title_activity_list_exercise"
            android:parentActivityName=".ui.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pagenguyen.elib.ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.exercise.ExerciseContentActivity"
            android:label="@string/title_activity_exercise_content"
            android:parentActivityName=".ui.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pagenguyen.elib.ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.exercise.ExerciseResultActivity"
            android:label="@string/title_activity_exercise_result"
            android:parentActivityName=".ui.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pagenguyen.elib.ui.HomeActivity" />
        </activity>
    </application>

</manifest>
