<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pagenguyen.elib.ui.exercise.ExerciseResultActivity"
    android:id="@+id/resultLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Điểm"
        android:textSize="36dp"
        android:id="@+id/resultScoreText"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Số câu đúng: 6/10"
        android:textSize="18dp"
        android:id="@+id/numberRightAnswer"
        android:layout_centerVertical="true"
        android:layout_below="@+id/resultScoreText"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconImageView"
        android:src="@mipmap/ic_star_white_48dp"
        android:background="@drawable/frame"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/numberRightAnswer"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Trạng thái"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:id="@+id/resultStatusText"
        android:layout_below="@+id/iconImageView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
