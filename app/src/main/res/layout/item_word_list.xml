<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_inner_layout"
    android:paddingRight="@dimen/padding_inner_layout"
    android:paddingTop="@dimen/padding_inner_layout"
    android:paddingBottom="@dimen/padding_inner_layout"
    tools:background="#44000000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemVocabulary"
        android:textSize="@dimen/font_size_basic"
        tools:text="Demo voca"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemMeaning"
        android:textSize="@dimen/font_size_tiny"
        tools:text="Demo Meaning"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/itemVocabulary"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/frame"
        android:src="@mipmap/ic_favorite_white_24dp"
        android:layout_marginTop="4dp"/>

</RelativeLayout>