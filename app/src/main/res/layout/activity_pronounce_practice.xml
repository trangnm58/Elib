<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.pagenguyen.elib.ui.pronounce.PronouncePracticeActivity">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/tool_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:id="@+id/textView"
        android:textSize="48sp"
        android:layout_marginTop="144dp"
        android:layout_below="@+id/my_toolbar"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/heˈlō/"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/volumeButton"
        android:src="@mipmap/ic_volume_up_black_18dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/textView"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/microSpeakButton"
        android:src="@mipmap/ic_keyboard_voice_black_36dp"
        android:alpha="1"
        android:contentDescription="@string/voice_search_description"
        android:paddingTop="5dp"
        style="@style/AppButtonStyle"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/volumeButton"
        android:layout_centerHorizontal="true"
        android:cropToPadding="false"
        android:background="#00ffffff"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bỏ qua"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
</RelativeLayout>
