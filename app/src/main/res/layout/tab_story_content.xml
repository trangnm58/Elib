<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doExerciseButton"
            android:text="Bài tập"
            android:layout_gravity="right"
            android:layout_alignBottom="@+id/currentStoryName"
            android:layout_alignParentEnd="true"/>

        <TextView
            tools:text="Tên truyện"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/currentStoryName"
            android:layout_gravity="center_horizontal"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Nội dung truyện"
            android:id="@+id/storyContentText"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/doExerciseButton"
            android:layout_alignParentEnd="true"
            />

</RelativeLayout>