<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">#5C8B9D</item>
        <item name="android:actionBarStyle">@style/AppActionBarStyle</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
        <item name="android:textColor">#63666F</item>
        <item name="android:editTextColor">#99000000</item>
        <item name="android:editTextStyle">@style/AppEditTextStyle</item>
    </style>
    <!-- Background for some activities. -->
    <style name="AppTheme.HaveBackground" parent="AppTheme">
        <item name="android:background">#8EB4C1</item>
    </style>


    <style name="AppButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">#5C8B9D</item>
        <item name="android:textColor">#caffffff</item>
    </style>
    <style name="AppEditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:alpha">0.8</item>
    </style>
    <style name="AppActionBarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/AppTitleTextStyle</item>
    </style>
    <style name="AppTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
